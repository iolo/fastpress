<h1><%= page.title %></h1>
<% if (page.date) { %>
<div>date: <%= page.date %></div>
<% } %>
<% if (page.author) { %>
<div>author: <%= page.author %></div>
<% } %>
<% if (page.tags) { %>
    <div>tags: <% for (const tag of page.tags) { %><a href="/tags/<%= tag %>"><%= tag %></a><% } %></div>
<% } %>
<div><%- page.main %></div>
